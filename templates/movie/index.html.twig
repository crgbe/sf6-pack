{% extends 'base.html.twig' %}

{% block title %}
    Movies list

    {{ parent() }}
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Year</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><a href="{{ path('app_movies_show', {'id' : movie.id}) }}">{{ movie.name }}</a></td>
                <td>{{ movie.description }}</td>
                <td>{{ movie.year|date('Y') }}</td>
                <td><a href="{{ path('app_movies_delete', {'id': movie.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

